{
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    }
  },
  "globals": {
    "window": true,
    "document": true,
    "alert": true,
    "XMLHttpRequest": true,
    "jest": true
},
  "rules": {
    "curly": ["error", "multi-line"],
    "jsx-a11y/href-no-hash": "off",
    "no-underscore-dangle": "off",
    "react/forbid-prop-types": "off",
    "react/require-default-props": "off"
  },
  "env": {
    "browser": true,
    "node": true
  }
}